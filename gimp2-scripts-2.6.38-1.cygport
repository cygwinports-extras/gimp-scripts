SRC_DIR="gimp_scripts_${PV[1]}${PV[2]}"

src_compile() { :; }

src_install() {
	cd ${S}
	insinto /usr/share/gimp/2.0/scripts
	doins *.scm
	insinto /usr/share/gimp/2.0/gimpressionist/Presets
	doins Presets/*
}
