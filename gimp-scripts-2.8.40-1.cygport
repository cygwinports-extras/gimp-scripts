CATEGORY="Graphics"
SUMMARY="Collection of scripts for GIMP 2.6"
DESCRIPTION="GIMP-2.8 scripts is a fixed/hacked collection of scripts for use
in the new GIMP."
HOMEPAGE="http://www.gimphelp.org/script28.shtml"
SRC_URI="http://www.gimphelp.org/DL/gimp_scripts-${PV[1]}.${PV[2]}.tar.bz2"
SRC_DIR="gimp_scripts-${PV[1]}.${PV[2]}"

src_compile() { :; }

src_install() {
	cd ${S}
	insinto /usr/share/gimp/2.0/scripts
	doins *.scm
	insinto /usr/share/gimp/2.0/gimpressionist/Presets
	doins Presets/*
}
